<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.sale.supermarketboot.dao.CommodityDao">
    <insert id="add">
        insert into tb_commodity(id,`name`,specification,units,price,stock,is_delete)
        values (
            #{id,jdbcType=INTEGER},
            #{name,jdbcType=CHAR},
            #{specification,jdbcType=CHAR},
            #{units,jdbcType=CHAR},
            #{price,jdbcType=DOUBLE},
            #{stock,jdbcType=INTEGER},
            0
        );
    </insert>
    <select id="getCommodities" resultType="com.sale.supermarketboot.pojo.Commodity">
        SELECT
        *
        FROM
        `tb_commodity`
        where
            is_delete = 0
    </select>
    <select id="getCommodity" resultType="com.sale.supermarketboot.pojo.Commodity">
        SELECT
            *
        FROM
            tb_commodity
        WHERE
            id = #{id}
        and
            is_delete = 0
    </select>

    <update id="update">
        update `tb_commodity`
        <trim prefix="set"  suffixOverrides=",">
            <if test=" name !=null and name !='' ">`name` = #{name, jdbcType=CHAR},</if>
            <if test=" specification !=null and specification !='' "> specification = #{specification, jdbcType=CHAR },</if>
            <if test=" units !=null and units !='' ">units = #{units, jdbcType=CHAR},</if>
            <if test=" price != 0.0 ">price = #{price, jdbcType=DOUBLE},</if>
            <if test=" stock >= 0 ">stock = #{stock,jdbcType=INTEGER}</if>
        </trim>
        where
            id = #{id, jdbcType=INTEGER} and is_delete = 0
    </update>
    <delete id="delete">
        update `tb_commodity`
        set is_delete = 1
        where
        <if test="id != 0">
            id = #{id} and is_delete = 0
        </if>

    </delete>

</mapper>